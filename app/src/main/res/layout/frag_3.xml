<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="#D00A0A0A"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/coworkers_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_supervisor_account_white"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Coworkers (0)"
        android:textSize="20sp"
        android:textColor="#fff"
        android:padding="10dp"
        android:drawablePadding="10dp"/>

    <TextView
        android:id="@+id/family_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_supervisor_account_white"
        android:text="Family (0)"
        android:textSize="20sp"
        android:textColor="#fff"
        android:padding="10dp"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@id/coworkers_text"/>

    <TextView
        android:id="@+id/friends_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_supervisor_account_white"
        app:layout_constraintTop_toBottomOf="@id/family_text"
        android:text="Friends (0)"
        android:textSize="20sp"
        android:drawablePadding="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/coworkers_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/family_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/friends_text"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/float_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_white"
        app:fabCustomSize="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FF8300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

